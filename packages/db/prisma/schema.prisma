generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                          String                      @id @default(uuid())
  username                    String?                     @unique
  fullname                    String?
  email                       String                      @unique
  aitoken                     Int?
  maxaitoken                  Int?                        @default(3) 
  bio                         String?
  avatar                      String?
  location                    String?
  problemsSolved              Int?                        @default(0)   
  rank                        Int?                        @default(0)         
  contestsParticipated        Int?                        @default(0)         
  currentStreak               Int?                        @default(0)   
  social                      Social?

  leaderboard                 LeaderBoard[]
  submittion                  Submittion[]

  contextsubmittion           ContestSubmittion[] 

  SolvedProblem               String[]              

  AssistantMessage            ChatMessages[]
  CompileCode                 CompilerCodeHistory[]
  createdAt                   DateTime                    @default(now())
  updatedAt                   DateTime                    @updatedAt()
}

model ChatMessages {
  id                          String                     @id @default(uuid())
  message                     String
  userId                      String
  user                        User                        @relation(fields: [userId], references : [id])   
  createdAt                   DateTime                    @default(now())
  updatedAt                   DateTime                    @updatedAt()         
}

model CompilerCodeHistory{
  id                          String                      @id @default(uuid())
  title                       String?
  language                    String
  code                        String
  userId                      String
  user                        User                        @relation(fields : [userId] , references : [id])
  createdAt                   DateTime                    @default(now())
  updatedAt                   DateTime                    @updatedAt()    
}


model Social {
  id                          String                      @id @default(uuid()) 
  github                      String?
  linkedin                    String?
  twitter                     String?
  userId                      String                      @unique
  user                        User                        @relation(fields: [userId], references : [id])   
}

model Admin {
  id                          String                      @id @default(uuid())
  email                       String                      @unique
  password                    String          
}

model Contest {
  id                          String                       @id @default(uuid())
  title                       String            
  description                 String? 
  participants                Int   
  startTime                   DateTime
  endTime                     DateTime
  type                        ContestType                   @default(WEEKLY)
  status                      ContestStatus                 @default(UPCOMING)
  difficulty                  DifficultyLevel?              @default(EASY)
  leaderBoard                 LeaderBoard[]
  contestTochallegemapping    ContentToChallegesMapping[]
}

model LeaderBoard {
  id                          String                        @id @default(uuid())
  contestId                   String
  userId                      String
  rank                        Int
  contest                     Contest                       @relation(fields: [contestId], references : [id])      
  user                        User                          @relation(fields: [userId], references : [id]) 
}

model Challenges {
  id                          String                        @id @default(uuid())
  title                       String
  description                 String
  difficulty                  DifficultyLevel               @default(EASY)
  slug                        String                        @unique
  images                      String?
  tags                        String[]
  maxpoint                    Int
  starterCode                 String
  isSolved                    Boolean                       @default(false)
  contestTochallegemapping    ContentToChallegesMapping[]
  submittions                 Submittion[]
  examples                    Example[]
  testcase                    TestCase[]
  createdAt                   DateTime                      @default(now())
  updatedAt                   DateTime                      @updatedAt()
}

model Example {
  id                          String                        @id @default(uuid())
  input                       String
  output                      String
  explanation                 String?
  challengeId                 String
  challenges                  Challenges                    @relation(fields: [challengeId], references : [id]) 
}

model TestCase {
  id                          String                        @id @default(uuid())
  input                       String
  expectedOutput              String
  challengeId                 String
  testcasecode                String?
  challenges                  Challenges                    @relation(fields: [challengeId], references : [id]) 
}

model ContentToChallegesMapping {
  id                          String                         @id @default(uuid())
  contestId                   String
  challengeId                 String
  index                       Int
  contestsubmission           ContestSubmittion[]       
  contest                     Contest                        @relation(fields: [contestId], references : [id])
  challenge                   Challenges                     @relation(fields: [challengeId], references : [id])
}

model Submittion {
  id                          String                         @id @default(uuid())
  submittion                  String
  challengeId                 String
  userId                      String
  points                      Int
  challenge                   Challenges                      @relation(fields: [challengeId], references : [id])
  user                        User                            @relation(fields: [userId], references : [id]) 
  createdAt                   DateTime                        @default(now())
}

model ContestSubmittion {
  id                          String                          @id @default(uuid())
  submission                  String
  contestTochallegemappingid  String
  points                      Int
  userId                      String
  user                        User                            @relation(fields: [userId], references : [id]) 
  contestTochallegemapping    ContentToChallegesMapping       @relation(fields: [contestTochallegemappingid], references : [id]) 
  createdAt                   DateTime                        @default(now())
}

model UserFeedback {
  id                          String                          @id @default(uuid())
  fullname                    String
  email                       String
  subject                     String
  messages                    String
  createdAt                   DateTime                        @default(now())
}

model LearningCategory {
  id          String   @id @default(uuid())
  name        String   @unique
  slug        String   @unique
  description String?
  order       Int?

  modules     LearningModule[]

  createdAt   DateTime @default(now())
}

model LearningModule {
  id          String   @id @default(uuid())
  categoryId  String
  title       String
  slug        String   @unique
  description String?
  icon        String?
  order       Int?

  category    LearningCategory @relation(fields: [categoryId], references: [id])
  sections    LearningSection[]

  createdAt   DateTime @default(now())
}

model LearningSection {
  id        String   @id @default(uuid())
  moduleId String
  title     String
  order     Int?

  module    LearningModule @relation(fields: [moduleId], references: [id])
  topics    LearningTopic[]

  createdAt DateTime @default(now())
}

model LearningTopic {
  id          String   @id @default(uuid())
  sectionId  String
  title       String
  slug        String   @unique
  description String?
  difficulty  DifficultyLevel?
  order       Int?

  section     LearningSection @relation(fields: [sectionId], references: [id])
  contents    LearningContent[]
  challenges  LearningTopicChallenge[]

  createdAt   DateTime @default(now())
}

model LearningContent {
  id        String   @id @default(uuid())
  topicId  String
  type      ContentType
  title     String
  body      String   // Markdown / HTML
  duration  Int?

  topic     LearningTopic @relation(fields: [topicId], references: [id])

  createdAt DateTime @default(now())
}

enum ContentType {
  ARTICLE
  NOTE
  VIDEO
}


enum DifficultyLevel {
  HARD
  EASY
  MEDIUM
}

enum ContestType{
  WEEKLY
  MONTHLY
}

enum ContestStatus {
  UPCOMING
  ONGOING
  COMPLETED
}
